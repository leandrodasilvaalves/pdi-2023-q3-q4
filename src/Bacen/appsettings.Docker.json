{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "Mongo": {
        "ConnectionString": "mongodb://rootuser:rootpassword@mongo:27017",
        "DatabaseName": "bacen"
    },    
    "Kafka": {
        "Configuration": {
            "BootstrapServers": "kafka:29092",
            "GroupId": "bacen.group",
            "AutoOffsetReset": "earliest"
        },
        "Topics": {
            "Entries": "bacen.entries",
            "Claims": "bacen.claims"
        }
    }
}